{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Arduino: Debug (OpenOCD)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/arduino.avr.uno/${workspaceRootFolderName}.ino.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/avr-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "arduino:upload"
        },
        {
            "name": "PlatformIO Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.pio/build/uno/firmware.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/home/ubuntu/.platformio/packages/toolchain-atmelavr/bin/avr-gdb"
        },
        {
            "name": "ESP32 Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.pio/build/esp32dev/firmware.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/home/ubuntu/.platformio/packages/toolchain-xtensa32/bin/xtensa-esp32-elf-gdb"
        }
    ]
} 